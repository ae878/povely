<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mimi.povely.MainActivity"
    android:background="#fff">

    <TextView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:text="Povely"
        android:textColor="#333"
        android:textSize="27dp"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <View
        android:id="@+id/top_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffcccccc"
        android:layout_below="@id/top_bar">
    </View>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickHome"        >
            <ImageButton
                android:id="@+id/to_home"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClickHome"
                android:background="@drawable/home_button"/>
            <TextView
                android:layout_below="@id/to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClickHome"
                android:text="홈"
                android:textSize="10dp"
                android:textColor="#ff888888"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickDiary">
            <ImageButton
                android:id="@+id/to_diary"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClickDiary"
                android:background="@drawable/diary_button"/>
            <TextView
                android:layout_below="@id/to_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="일기"
                android:textSize="10dp"
                android:onClick="onClickDiary"
                android:textColor="#ff888888"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickGallery">
            <ImageButton
                android:id="@+id/to_gallery"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClickGallery"
                android:background="@drawable/gallery_button"/>
            <TextView
                android:layout_below="@id/to_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickGallery"
                android:layout_centerHorizontal="true"
                android:text="갤러리"
                android:textSize="10dp"
                android:textColor="#ff888888"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickCommunityPlus"
            >
            <ImageButton
                android:id="@+id/to_community"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/plus"
                android:onClick="onClickCommunityPlus"
                />
            <TextView
                android:layout_below="@id/to_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="글쓰기"
                android:textSize="10dp"
                android:textColor="#ff888888"
                android:onClick="onClickCommunityPlus"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickSetting">
            <ImageButton
                android:id="@+id/to_settings"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClickSetting"
                android:background="@drawable/settings_button"/>
            <TextView
                android:layout_below="@id/to_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="설정"
                android:textSize="10dp"
                android:onClick="onClickSetting"
                android:textColor="#ff888888"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffcccccc"
        android:layout_above="@id/bottom_bar">
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_bar"
        android:layout_below="@id/top_bar">

    </LinearLayout>

</RelativeLayout>
