<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mimi.povely.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cover"
        android:src="@drawable/coco"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:text="Povely"
        android:textColor="#333"
        android:textSize="27dp"
        android:background="#fff"/>
    <View
        android:id="@+id/top_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffcccccc"
        android:layout_below="@id/top_bar"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커버 설정"
        android:id="@+id/coverSetting"
        android:onClick="onClickHome"/>

    <Button
        android:id="@+id/cover_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:text="+"
        android:textColor="#555"
        />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickWidgetPlus">
            <ImageButton
                android:id="@+id/to_home"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClickWidgetPlus"
                android:background="@drawable/home_button"/>
            <TextView
                android:layout_below="@id/to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:onClick="onClickWidgetPlus"
                android:text="홈"
                android:textSize="10dp"
                android:textColor="#ff888888"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickDiary">
            <ImageButton
                android:id="@+id/to_diary"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClickDiary"
                android:background="@drawable/diary_button"/>
            <TextView
                android:layout_below="@id/to_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="일기"
                android:textSize="10dp"
                android:onClick="onClickDiary"
                android:textColor="#ff888888"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickGallery">
            <ImageButton
                android:id="@+id/to_gallery"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClickGallery"
                android:background="@drawable/gallery_button"/>
            <TextView
                android:layout_below="@id/to_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClickGallery"
                android:layout_centerHorizontal="true"
                android:text="갤러리"
                android:textSize="10dp"
                android:textColor="#ff888888"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickCommunity"
            >
            <ImageButton
                android:id="@+id/to_community"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/community_button"
                android:onClick="onClickCommunity"
                />
            <TextView
                android:layout_below="@id/to_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="커뮤니티"
                android:textSize="10dp"
                android:textColor="#ff888888"
                android:onClick="onClickCommunity"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClickSetting">
            <ImageButton
                android:id="@+id/to_settings"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClickSetting"
                android:background="@drawable/settings_button"/>
            <TextView
                android:layout_below="@id/to_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="설정"
                android:textSize="10dp"
                android:onClick="onClickSetting"
                android:textColor="#ff888888"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/bottom_bar_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ffcccccc"
        android:layout_above="@id/bottom_bar">
    </View>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview1"
        android:textFilterEnabled="true"
        android:layout_below="@id/top_bar_divider"
        android:layout_above="@id/bottom_bar_divider">
    </ListView>

</RelativeLayout>
